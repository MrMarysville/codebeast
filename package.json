{
  "name": "code-beast",
  "version": "1.0.0",
  "description": "An intelligent coding platform with AI-powered feature processing",
  "main": "backend/server.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "backend": "cd backend && node server.js",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup": "node setup.js",
    "clean": "rimraf **/node_modules"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-jest": "^29.5.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!react-force-graph-2d|d3|react-force-graph)"
    ]
  }
}
